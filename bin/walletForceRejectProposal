#!/usr/bin/env node

'use strict';
/**
 * Execute this file to force reject a proposal upon wallet startup.
 * Make sure to fill in the WALLET_ID and PROPOSAL_ID
 */
process.title = 'bmultisig';

if (process.argv.indexOf('--help') !== -1
    || process.argv.indexOf('-h') !== -1) {
  console.error('See the bcoin docs for wallets at: https://github.com/bcoin-org/bcoin.');
  process.exit(1);
  throw new Error('Could not exit.');
}

if (process.argv.indexOf('--version') !== -1
    || process.argv.indexOf('-v') !== -1) {
  const pkg = require('../package.json');
  console.log(`bmultisig ${pkg.version}`);
  process.exit(0);
  throw new Error('Could not exit.');
}

const assert = require('bsert');
const Node = require('bcoin').wallet.Node;

const node = new Node({
  config: true,
  argv: true,
  env: true,
  logFile: true,
  logConsole: true,
  logLevel: 'debug',
  memory: false,
  workers: true,
  listen: true,
  loader: require,

  plugins: [require('../lib/plugin')]
});

// Need to fill in the blanks here.
const WALLET_ID = '234db3eb-7572-f1fe-4d44-bdc58c43502f';
const PROPOSAL_ID = 0;

async function rejectProposal(node) {
  const plugin = node.get('multisig');
  const wallet = await plugin.msdb.getWallet(WALLET_ID);

  assert(wallet);

  await wallet.forceRejectProposal(PROPOSAL_ID);
}

process.on('unhandledRejection', (err, promise) => {
  throw err;
});

(async () => {
  await node.ensure();
  await node.open();
  await rejectProposal(node);
})().catch((err) => {
  console.error(err.stack);
  process.exit(1);
});
